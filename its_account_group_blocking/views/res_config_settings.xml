<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="its_account_group_blocking_config" model="ir.ui.view">
        <field name="name">its_account_group_blocking_config</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='default_accounts']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_panel"/>
                    <div class="o_setting_right_pane">
                        <div class="content-group">
                            <div class="row mt8">
                                <label for="force_analytic_account" class="col-lg-4 o_light_label"/>
                                <field name="force_analytic_account" options="{'no_create': True, 'no_edit': True}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

